<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="9.5dp"
        android:paddingLeft="12.5dp"
        android:paddingRight="18.5dp"
        android:paddingTop="12.5dp">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TitleStyle"
                android:text="名称" />

            <TextView
                android:id="@+id/txt_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="内容"
                android:textColor="@color/textColor2" />
            <TextView
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/bg_button2"
                android:id="@+id/txt_show_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展开更多"
                android:textColor="@color/textColor2" />

            <com.lzy.ninegrid.NineGridView
                android:id="@+id/nineGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingTop="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textSize="12sp"
                    android:text="2018-12-31 12:30" />

                <TextView
                    android:background="@drawable/bg_button5"
                    android:id="@+id/txt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_toLeftOf="@+id/txt_to_top"
                    android:text="作废"
                    android:textColor="@color/orangered"
                    android:textSize="12sp"/>

                <TextView
                    android:background="@drawable/bg_button4"
                    android:id="@+id/txt_to_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_alignParentRight="true"
                    android:text="顶置"
                    android:textColor="@color/mainColor"
                    android:textSize="12sp"/>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
