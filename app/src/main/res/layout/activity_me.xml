<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MeActivity">
    <include layout="@layout/layout_title_top" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:background="@color/appBg"
        android:text="基本信息"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_avator"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white" >

        <TextView
            android:layout_marginLeft="10dp"
            style="@style/MenuTitleStyle"
            android:gravity="center_vertical"
            android:text="用户头像"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <com.zhailiw.app.widget.SelectableRoundedImageView
            android:id="@+id/img_avatar"
            android:src="@drawable/app_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14sp"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="50dip"
            app:sriv_left_top_corner_radius="50dip"
            app:sriv_right_bottom_corner_radius="50dip"
            app:sriv_right_top_corner_radius="50dip"
            app:sriv_border_width="2dip"
            app:sriv_border_color="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"      >

        <TextView
            style="@style/MenuTitleStyle"
            android:gravity="center_vertical"
            android:text="用户昵称"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_nickname"
            android:gravity="center_vertical"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical" >
        <TextView
            style="@style/MenuTitleStyle"
            android:gravity="center_vertical"
            android:text="性别"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_sex"
            android:gravity="center_vertical"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_birthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical" >
        <TextView
            style="@style/MenuTitleStyle"
            android:gravity="center_vertical"
            android:text="出生日期"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_birthday"
            android:gravity="center_vertical"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:text="认证信息"
        android:background="@color/appBg"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            style="@style/MenuTitleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="绑定手机" />
        <TextView
            android:id="@+id/txt_cellphone"
            android:gravity="center_vertical"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_right"
            android:tint="@color/grayLine" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_wx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            style="@style/MenuTitleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="绑定微信" />
        <TextView
            android:id="@+id/txt_weixin"
            android:gravity="center_vertical"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_right"
            android:tint="@color/grayLine" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_qq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <TextView
            style="@style/MenuTitleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="绑定QQ" />
        <TextView
            android:id="@+id/txt_qq"
            android:gravity="center_vertical"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_right"
            android:tint="@color/grayLine" />
    </LinearLayout>

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:id="@+id/btn_login_off"
        android:text="退出注销"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/ButtonStyleRadius"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>