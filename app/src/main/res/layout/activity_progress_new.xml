<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ProgressNewActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_title_top" />
      <LinearLayout
          android:layout_marginTop="90dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <LinearLayout
              android:background="@color/mainColorBg"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="50dp">
              <TextView
                  style="@style/TitleStyle"
                  android:text="标题"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content" />

<EditText
    android:background="@color/mainColorBg"
    android:id="@+id/edit_name"
    android:layout_width="0dp"
    android:layout_weight="3"
    android:layout_height="match_parent" />
          </LinearLayout>

          <TextView
              style="@style/TitleStyle"
              android:text="施工阶段周期"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

          <LinearLayout
              android:background="@color/mainColorBg"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="50dp">
              <TextView
                  style="@style/TitleStyle"
                  android:text="开始时间"
                  android:layout_width="0dp"
                  android:layout_weight="2"
                  android:layout_height="wrap_content" />

              <TextView
                  android:id="@+id/txt_start_date"
                  android:text="2018-8-1"
                  android:layout_width="0dp"
                  android:layout_weight="3"
                  android:layout_height="wrap_content" />
              <ImageView
                  android:id="@+id/img_start_down"
                  android:src="@drawable/icon_down"
                  android:layout_weight="1"
                  android:layout_width="15dp"
                  android:layout_height="15dp" />
          </LinearLayout>

          <LinearLayout

              android:background="@color/mainColorBg"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="50dp">
              <TextView
                  style="@style/TitleStyle"
                  android:text="结束时间"
                  android:layout_width="0dp"
                  android:layout_weight="2"
                  android:layout_height="wrap_content" />

              <TextView
                  android:id="@+id/txt_end_date"
                  android:text="2018-8-1"
                  android:layout_width="0dp"
                  android:layout_weight="3"
                  android:layout_height="wrap_content" />
              <ImageView
                  android:id="@+id/img_end_down"
                  android:src="@drawable/icon_down"
                  android:layout_weight="1"
                  android:layout_width="15dp"
                  android:layout_height="15dp" />
          </LinearLayout>

      </LinearLayout>
        <Button
            android:id="@+id/btn_new_progress"
            android:layout_alignParentBottom="true"
            style="@style/ButtonStyleRadius"
            android:text="提交" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>