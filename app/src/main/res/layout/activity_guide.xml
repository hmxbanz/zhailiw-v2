<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="fill_parent"  android:layout_height="fill_parent" >

    <android.support.v4.view.ViewPager android:id="@+id/GuiderViewPager" android:layout_width="fill_parent" android:layout_height="fill_parent" />

    <com.zhailiw.app.widget.scaleIndicator.ScaleIndicatorLayout
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:indicatorIncreaseSize="3dp"
        app:indicatorMinSize="6dp">

        <com.zhailiw.app.widget.scaleIndicator.ScaleIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.zhailiw.app.widget.scaleIndicator.ScaleIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <com.zhailiw.app.widget.scaleIndicator.ScaleIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

    </com.zhailiw.app.widget.scaleIndicator.ScaleIndicatorLayout>
</FrameLayout>

